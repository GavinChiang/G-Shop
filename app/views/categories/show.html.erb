 <div class="search-result">
	<div class="row">
        <% @products.each do |product| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
          <div class="thumbnail">
            <% if product.photo.present? %>
            <%= image_tag(product.photo.image.indexforamt.url) %>
            <% else %>
            <%= image_tag("http://placehold.it/320x150&text=No Pic") %>
            <% end %>
            <div class="caption">
              <%= link_to product_path(product) do %>
              <h4><%= product.title %></h4>
              <% end %>
              <h4 class="pull-right" > <%= product.price %></h4><br>
              
              <%= truncate(product.description, :length => 50) %>
            </div>
            
          </div>
          
        </div>
        <% end %>
      </div>
</div>
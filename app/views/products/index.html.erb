<div class="row">
  <div class="col-md-3">
    <p class="lead">G-Shop</p>
    <div class="list-group">
      <% @categories.each do |category| %>
      <a href="#" class="list-group-item">
        <%= category.name %>
      </a>
      <% end %>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row carousel-holder">
      <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            
            <div class="item active">
              <%= image_tag(@products[0].photo.image.slidepage.url, class: "slide-image") %>
            </div>
            <% count = 0 %>
            <% @products[1..2].each do |p| %>
            
            <div class="item">
              <%= image_tag(p.photo.image.slidepage.url, class: "slide-image") %>
              <% count += 1 %>
            </div>
            <% end %>
            <% if count < 2 %>
            <div class="item">
              <%= image_tag("http://placehold.it/800x300&text=No Pic", class: "slide-image") %>
              <% end %>
            </div>
            
            
            
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
          </div>
        </div>
      </div>
      
      <div class="row">
        <% @products.each do |product| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
          <div class="thumbnail">
            <% if product.photo.present? %>
            <%= image_tag(product.photo.image.thumb.url, class: "indexformat") %>
            <% else %>
            <%= image_tag("http://placehold.it/320x150&text=No Pic", class: "indexformat") %>
            <% end %>
            <div class="caption">
              <%= link_to product_path(product) do %>
              <h4><%= product.title %></h4>
              <% end %>
              <h4><%= product.price %></h4><br>
              
              <%= truncate(product.description, :length => 50) %>
            </div>
            <div class="ratings">
              <p class="pull-right">12 reviews</p>
              <p>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star-empty"></span>
              </p>
            </div>
          </div>
          
        </div>
        <% end %>
      </div>
      <br>
      <%= render :partial => "products/search_bar" %>
      <br>
      <div class="container">
        <hr>
        <!-- Footer -->
        <footer>
          <div class="row">
            <div class="col-lg-12">
              <p>Copyright &copy; GavinChiang 2016</p>
            </div>
          </div>
        </footer>
      </div>